<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand m-2" do %>
      <%= image_tag "https://res.cloudinary.com/ddfjqexgw/image/upload/v1699906527/starin-complete-logo-inverted-color-version-rgb-29.9861in_300ppi_pm4s9h.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "btn btn-primary nav-link text-light mx-2" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-primary nav-link text-light mx-2" %>
          </li>
          <li class="nav-item">
            <%= link_to profile_path do %>
              <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar", alt: "profile picture" %>
            <% end %>
          </li>
          <% elsif company_signed_in? %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "btn btn-primary nav-link text-light mx-2" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_company_session_path, data: { turbo_method: :delete }, class: "btn btn-primary nav-link text-light mx-2" %>
            </li>
            <li class="nav-item">
              <%= link_to profile_path do %>
                <%= cl_image_tag current_company.photo.key, crop: :fill, class: "avatar", alt: "company picture" %>
              <% end %>
            </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "btn btn-primary text-light" %>
            <%#= link_to "Login as a Company", new_company_session_path, class: "btn btn-primary text-light mx-2" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
